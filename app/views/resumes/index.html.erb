<head>
    <title>responsive web</title>
    <link rel="stylesheet" type="text/css" href="style.css">
    <style>
       
    body{
    padding: 0px;
    margin: 0px;
    background: #f2f2f2;
    }

    .nav{
    width:100%;
    height:80px;
    background:#000033;
    }

    ul{
    list-style:none;
    padding:0px;
    margin: 0px;
    position:absolute;
    }

    ul li{
    float:left;
    margin-top: 20px;
    }
    ul li a{
    width: 150px;
    display:block;
    color: white;
    text-decoration: none;
    padding:10px;
    border-radius: 10px;
    text-align: center;
    font-size: 20px;
    font-weight: bolder;
    font-family: Century Gothic;

    }
    a:hover{
    background: #669900;
    }

    ul li ul{
    background: #000033;
    display: none;
    }
    ul li ul li{
    float: none;
    }
    ul li:hover ul{
    display: block;
    }
</style>

</head>
<body>
    <div class="nav">
        <ul>
            <li><a>Home</a></li>
            <li><a>News</a></li>
            <li><a>Blog</a></li>
            <li><a>Feedback</a></li>
            <li><a>More</a>
                <ul>
                        <li><a>More1</a></li>
                        <li><a>More2</a></li>
                        <li><a>More3</a></li> 
                        <li><a>more4</a></li>
                        <li><a>more5</a></li>
                </ul>
            </li>
            <li><a>Contact</a></li>
            <li><a>About</a></li>
        </ul>
    </div>
</body>

<p id="notice"><%= notice %></p>

<h1>Resumes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Categories</th>
      <th>Price</th>
      <th>Year</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resumes.each do |resume| %>
    
      <tr>
        <td><%= resume.title %></td>
        <td><%= resume.categories %></td>
        <td><%= resume.price %></td>
        <td><%= resume.year %></td>
        <td><img src"<%= resume.attachment %>"></td>
        <td><%= link_to 'Show', resume %></td>
        <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
        <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resume', new_resume_path %>

